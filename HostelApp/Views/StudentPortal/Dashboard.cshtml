@model HostelApp.Models.Student

@{
    ViewData["Title"] = "Student Portal";
    var fees = ViewBag.MyFees as List<HostelApp.Models.FeeChallan>;
    var complaints = ViewBag.MyComplaints as List<HostelApp.Models.Complaint>;
}

<style>
    /* 1. VIVID NAVY BACKGROUND - Lighter Tech Theme */
    body {
        background: radial-gradient(circle at 15% 15%, #144272, transparent 40%), radial-gradient(circle at 85% 85%, #1e56a0, transparent 40%), linear-gradient(135deg, #0a2647 0%, #061a33 100%);
        background-attachment: fixed;
        min-height: 100vh;
        color: white;
        font-family: 'Inter', 'Segoe UI', sans-serif;
    }

    /* 2. THE GLASS PANELS */
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
        transition: transform 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
        }

    /* 3. TABLE STYLES */
    .glass-table {
        color: rgba(255, 255, 255, 0.9) !important;
        font-size: 0.85rem;
    }

        .glass-table thead th {
            color: #64ffda !important; /* Cyber Cyan */
            text-transform: uppercase;
            font-size: 0.7rem;
            letter-spacing: 1.5px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .glass-table td {
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
            padding: 12px 10px;
        }

    /* 4. FORM ELEMENTS */
    .glass-input {
        background: rgba(255, 255, 255, 0.05) !important;
        border: 1px solid rgba(255, 255, 255, 0.15) !important;
        color: white !important;
        border-radius: 12px !important;
    }

        .glass-input:focus {
            border-color: #00d2ff !important;
            box-shadow: 0 0 10px rgba(0, 210, 255, 0.3);
        }

    /* 5. UNIFIED BUTTONS */
    .btn-glass-danger {
        background: rgba(255, 71, 87, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 71, 87, 0.3);
        color: #ff4757 !important;
        border-radius: 12px;
        font-weight: 600;
    }

        .btn-glass-danger:hover {
            background: rgba(255, 71, 87, 0.25);
            box-shadow: 0 0 15px rgba(255, 71, 87, 0.3);
        }
</style>

<div class="container mt-4 pb-5">
    <div class="glass-card p-4 mb-4 d-flex align-items-center border-0 shadow-lg">
        <div class="avatar-circle me-3 d-flex align-items-center justify-content-center"
             style="width: 70px; height: 70px; background: rgba(0, 210, 255, 0.15); border-radius: 50%; color: #00d2ff; font-size: 2rem; border: 1px solid rgba(0, 210, 255, 0.3);">
            <i class="bi bi-person-circle"></i>
        </div>
        <div>
            <h3 class="mb-0 fw-bold">Welcome, @Model.Name!</h3>
            <span class="text-white-50 small">ID: @Model.StudentRollNo | Program: @Model.Program</span>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert bg-success bg-opacity-10 text-success border-0 small mb-4 py-2" style="backdrop-filter: blur(10px); border-radius: 12px;">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
        </div>
    }

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card glass-card h-100 border-0">
                <div class="card-header bg-transparent border-0 pt-4 px-4 fw-bold text-white">
                    <i class="bi bi-house-heart me-2 text-info"></i> My Residence
                </div>
                <div class="card-body px-4">
                    @if (Model.Room != null)
                    {
                        <div class="text-center mb-4 py-3 rounded-4" style="background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1);">
                            <h1 class="display-3 fw-bold mb-0" style="color: #00d2ff; text-shadow: 0 0 15px rgba(0, 210, 255, 0.4);">@Model.Room.RoomNumber</h1>
                            <span class="badge bg-light bg-opacity-10 text-white-50 border border-white border-opacity-10 px-3">FLOOR: @Model.Room.Floor</span>
                        </div>

                        <h6 class="text-white-50 small fw-bold text-uppercase letter-spacing-1 mb-3">Roommates</h6>
                        <div class="list-group list-group-flush bg-transparent">
                            @foreach (var roommate in Model.Room.Students)
                            {
                                if (roommate.Id != Model.Id)
                                {
                                    <div class="list-group-item bg-transparent border-0 px-0 py-2 d-flex align-items-center">
                                        <i class="bi bi-person-fill text-white-50 me-2"></i>
                                        <span>@roommate.Name</span>
                                    </div>
                                }
                            }
                            @if (Model.Room.Students.Count == 1)
                            {
                                <div class="text-center py-3 opacity-25">
                                    <i class="bi bi-stars d-block fs-3"></i>
                                    <small>Single Occupancy Mode</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 opacity-50">
                            <i class="bi bi-geo-alt fs-1 d-block mb-3"></i>
                            <p>Assignment Pending</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glass-card h-100 border-0">
                <div class="card-header bg-transparent border-0 pt-4 px-4 fw-bold text-white">
                    <i class="bi bi-wallet2 me-2 text-success"></i> Payment History
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table glass-table mb-0">
                            <thead>
                                <tr>
                                    <th>Month</th>
                                    <th>Fee</th>
                                    <th class="text-end">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (fees != null && fees.Any())
                                {
                                    @foreach (var fee in fees)
                                    {
                                        <tr>
                                            <td>@fee.Month</td>
                                            <td class="fw-bold">Rs. @fee.Amount</td>
                                            <td class="text-end">
                                                @if (fee.IsPaid)
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-2">PAID</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-2">UNPAID</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" class="text-center py-5 opacity-25">No transactions found.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glass-card h-100 border-0">
                <div class="card-header bg-transparent border-0 pt-4 px-4 fw-bold text-white">
                    <i class="bi bi-shield-exclamation me-2 text-danger"></i> Help Desk
                </div>
                <div class="card-body px-4">
                    <form asp-action="SubmitComplaint" method="post" class="mb-4">
                        <div class="mb-2">
                            <input name="title" class="form-control glass-input form-control-sm" placeholder="Issue Title (e.g. WiFi Down)" required />
                        </div>
                        <div class="mb-3">
                            <textarea name="description" class="form-control glass-input form-control-sm" rows="2" placeholder="Describe the issue..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-glass-danger w-100 btn-sm py-2">Submit Request</button>
                    </form>

                    <h6 class="text-white-50 small fw-bold text-uppercase letter-spacing-1 mb-2">Previous Logs</h6>
                    <div style="max-height: 180px; overflow-y: auto;">
                        @if (complaints != null && complaints.Any())
                        {
                            @foreach (var c in complaints)
                            {
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom border-white border-opacity-10">
                                    <div class="text-truncate me-2 small">@c.Title</div>
                                    <span class="badge @(c.Status == "Resolved" ? "bg-success" : "bg-warning text-dark") bg-opacity-10" style="font-size: 0.6rem;">@c.Status.ToUpper()</span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>