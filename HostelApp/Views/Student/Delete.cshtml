@model HostelApp.Models.Student

<style>
    /* 1. THEME BACKGROUND - Luminous Navy */
    body {
        background: radial-gradient(circle at 15% 15%, #144272, transparent 40%), radial-gradient(circle at 85% 85%, #1e56a0, transparent 40%), linear-gradient(135deg, #0a2647 0%, #061a33 100%);
        background-attachment: fixed;
        min-height: 100vh;
        color: white;
        font-family: 'Inter', 'Segoe UI', sans-serif;
    }

    /* 2. WRAPPER FOR CENTERING CONTENT BELOW NAVBAR */
    .form-container-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 85vh;
        padding: 20px;
    }

    /* 3. THE GLASS FORM CARD */
    .glass-form-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(30px);
        -webkit-backdrop-filter: blur(30px);
        border: 1px solid rgba(255, 255, 255, 0.25);
        border-radius: 28px;
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.4);
        animation: slideUpFade 0.5s ease-out forwards;
    }

    /* 4. GLASSY ALERT & DATA STYLING */
    .glass-alert-warning {
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.3);
        color: #ffc107;
        border-radius: 15px;
        padding: 15px;
        font-size: 0.85rem;
    }

    .data-label {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        font-weight: 600;
    }

    .data-value {
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
    }

    /* 5. UNIFIED GLASS BUTTONS */
    .glass-btn-danger {
        background: rgba(255, 71, 87, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 71, 87, 0.4);
        color: #ff4757 !important;
        border-radius: 12px;
        font-weight: 700;
        padding: 12px 24px;
        transition: 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

        .glass-btn-danger:hover {
            background: rgba(255, 71, 87, 0.25);
            box-shadow: 0 0 20px rgba(255, 71, 87, 0.3);
            transform: translateY(-2px);
        }

    .glass-btn-cancel {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        border-radius: 12px;
        font-weight: 600;
        padding: 12px 24px;
        text-decoration: none;
        transition: 0.3s;
        display: inline-block;
        text-align: center;
    }

        .glass-btn-cancel:hover {
            background: rgba(255, 255, 255, 0.15);
            color: white;
        }

    @@keyframes slideUpFade {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>



<div class="form-container-wrapper">
    <div class="glass-form-card">
        <div class="text-center mb-4">
            <div class="stat-icon-circle mb-3 d-inline-flex align-items-center justify-content-center"
                 style="width: 64px; height: 64px; background: rgba(255, 71, 87, 0.15); border-radius: 20px; color: #ff4757; font-size: 1.6rem; border: 1px solid rgba(255, 71, 87, 0.3);">
                <i class="bi bi-person-x-fill"></i>
            </div>
            <h3 class="fw-bold text-white mb-1">Remove Resident?</h3>
            <p class="text-white-50 small">Confirming will permanently delete this record.</p>
        </div>

        <div class="glass-alert-warning mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Warning:</strong> You are about to remove this student permanently. This action cannot be undone.
        </div>

        <div class="mb-5">
            <div class="row mb-3 align-items-center">
                <div class="col-5 data-label">Full Name</div>
                <div class="col-7 data-value text-truncate">@Model.Name</div>
            </div>
            <div class="row mb-3 align-items-center">
                <div class="col-5 data-label">Roll Number</div>
                <div class="col-7 data-value">@Model.StudentRollNo</div>
            </div>
            <div class="row mb-3 align-items-center">
                <div class="col-5 data-label">Assigned Room</div>
                <div class="col-7 data-value">
                    @if (Model.Room != null)
                    {
                        <span class="text-info"><i class="bi bi-door-closed me-1"></i>@Model.Room.RoomNumber</span>
                    }
                    else
                    {
                        <span class="text-white-50 fw-normal italic">Unassigned</span>
                    }
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-6">
                    <a asp-action="Index" class="glass-btn-cancel w-100">Cancel</a>
                </div>
                <div class="col-6">
                    <button type="submit" class="glass-btn-danger w-100 shadow-sm">
                        Delete
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>